    <a class="btn btn-success" style="margin-top: 20px; margin-bottom: 10px;font-size: 15px ; width: 100px" href="/Admin/Course/CreateCourse"> دوره جدید </a>
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست دوره ها
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
      
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th class="text-center">تصویر</th>
                                <th class="text-center">عنوان </th>
                                <th class="text-center">مدرس </th>
                                <th class="text-center">تعداد جلسات</th>
                                <th class="text-center">تاریخ ثبت</th>
                                <th class="text-center">دستورات</th>
                              
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model.Courses)
                            {

                                <tr class="gradeA odd">
                                    <td class="text-center">
                                       <img src="/images/Courses/Thumbnail/@item.ImageName"/>
                                    </td>

                                    <td class="text-center">@item.Title</td>
                                    <td class="text-center">@item.TeacherName</td>
                                    <td class="text-center">@item.EpisodeNumber</td>
                                    <td class="text-center">@item.RegisterDate.MiladiToShamsi()</td>
                                    <td class="text-center">
                                        <a href="/Admin/Course/EditCourse/@item.Id" class="btn btn-warning">ویرایش</a>
                                        <a href="/Admin/Course/DeleteCourse/@item.Id" class="btn btn-danger">حذف</a>
                                        <a href="/Admin/Episode/Index/@item.Id" class="btn btn-primary">جلسات دوره</a>
                                    </td>

           
                                </tr>
                            }



                        </tbody>
                    </table>
