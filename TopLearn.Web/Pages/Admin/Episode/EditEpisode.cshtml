@page    "{episodeId}"
@model TopLearn.Web.Pages.Admin.Episode.EditEpisodeModel
@{
}


<div class="row" style="margin-top: 30px">

    <form method="post" enctype="multipart/form-data">


        <input type="hidden" asp-for="CourseEpisode.EpisodeId" />
        <input type="hidden" asp-for="CourseEpisode.EpisodeFileName" />
        <input type="hidden" asp-for="CourseEpisode.CourseId" />
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    مشخصات جلسه
                </div>
                <div class="form-group" style="margin: 10px">
                    <label>عنوان جلسه</label>
                    <input asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="CourseEpisode.EpisodeTitle"></span>
                </div>

                <div class="form-group" style="margin: 10px">
                    <label>زمان جلسه</label>
                    <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                    <span class="text-danger" asp-validation-for="CourseEpisode.EpisodeTime"></span>
                </div>

                <div class="form-group" style="margin: 10px">
                    <label>  نام ویدیوآپلود شده  </label>
                    <input disabled type="text" asp-for="CourseEpisode.EpisodeFileName" class="form-control">
                </div>
                <div class="form-group" style="margin: 10px">
                    <label>انتخاب ویدیو جدید </label>
                    <input type="file" name="episodeFileUpload" class="form-control">
                </div>
                

                @*@if (ViewData["notUploadVideoEpisode"] != null)
                    {
                        <div class="help-block alert alert-danger">
                            <p>
                                حتما باید یک فایل ویدیویی برای این جلسه انتخاب کنید
                            </p>
                        </div>
                    }*@




                <div class="form-group" style="margin: 10px">
                    <label>
                        جلسه رایگان
                    </label>
                    <input asp-for="CourseEpisode.IsFree" type="checkbox">
                </div>

                <div class="form-group" style="margin: 10px">

                    <input class="btn btn-success" value="ذخیره اطلاعات" type="submit">
                </div>
            </div>
        </div>

    </form>

</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />


    @if (ViewData["InvalidFileName"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script>
            
            Swal.fire({
                position: 'top-center',
                icon: 'error',
                title: 'نام فایل انخاب شده تکراری میباشد ',
                showConfirmButton: false,
                timer: 3500
            })
        </script>
    }




}

