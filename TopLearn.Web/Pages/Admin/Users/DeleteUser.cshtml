@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Users.DeleteUserModel
@{

}



<div class="row">
    <input type="hidden" asp-for="UserViewModels.UserId" />

    <div class="col-lg-12">
        <form method="post">

            <div class="jumbotron">
                <h1>

                    <i class="fa fa-bell fa-fw text-danger"></i>  <span>آیا از حذف </span>  <span class="text-danger">@Model.UserViewModels.FullName</span> <span>اطمینان دارید ؟</span>
                </h1>
                <br />
                <br />

                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>نام و نام خانوادگی :</label>
                            <p class="form-control-static">@Model.UserViewModels.FullName</p>
                        </div>

                        <div class="form-group">
                            <label>نام کاربری</label>
                            <p class="form-control-static">@Model.UserViewModels.UserName</p>

                        </div>

                        <div class="form-group">
                            <label>موجودی کیف پول:</label>
                            <p class="form-control-static text-success">@Model.UserViewModels.WalletBalance.ToString("0,# تومان")</p>
                        </div>

                    </div>

                    <div class="col-lg-6 col-md-6">

                        <div class="form-group">
                            <label>ایمیل :</label>
                            <p class="form-control-static">@Model.UserViewModels.Email</p>
                        </div>

                        <div class="form-group">
                            <label>موبایل :</label>
                            <p class="form-control-static">@Model.UserViewModels.Mobile</p>
                        </div>

                        <div class="form-group">
                            <label>تاریخ عضویت :</label>
                            <p class="form-control-static">@Model.UserViewModels.RegisterDateTime.MiladiToShamsi()</p>
                        </div>


                    </div>
                </div>

                <p>
                    <input type="submit" class="btn btn-danger btn-lg" value="حذف" />
                    <a class="btn btn-primary btn-lg" href="/Admin/Users">انصراف</a>
                </p>
            </div>

        </form>
    </div>
</div>