@page "{roleId}"
@model TopLearn.Web.Pages.Admin.Roles.DeleteRoleModel
@{
}



<div class="row">

    <div class="col-lg-12">

        <form method="post">

            <div class="jumbotron">
                <h1>

                    <i class="fa fa-bell fa-fw text-danger"></i> <span>آیا از حذف </span> <span class="text-danger">@Model.Role.Description</span> <span>اطمینان دارید ؟</span>
                </h1>
                <br />
                <br />
                <input type="hidden" asp-for="Role.RoleId" />

                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>عنوان نقش</label>
                            <p class="form-control-static">@Model.Role.Description</p>
                        </div>

                    </div>

                    <div class="col-lg-6 col-md-6">

                        <div class="form-group">
                            <label>عنوان نقش به لاتین :</label>
                            <p class="form-control-static">@Model.Role.RoleName</p>
                        </div>

                    </div>
                </div>

                <p>
                    <input type="submit" class="btn btn-danger btn-lg" value="حذف" />
                    <a class="btn btn-primary btn-lg" href="/Admin/Roles">انصراف</a>
                </p>
            </div>

        </form>

    </div>

</div>

@section Scripts
{
    <script src="/Admin/js/jquery-1.10.2.js"></script>

    <script src="/Admin/js/bootstrap.min.js"></script>


    <script src="/Admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <script src="/Admin/js/sb-admin.js"></script>

}
