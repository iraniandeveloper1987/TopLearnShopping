                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true"><i class="zmdi zmdi-chevron-right"></i></span>
                    </a>

                </li>*@

            @for (int i = 1; i <= Model.Item2; i++)
            {
                <li class="page-item">
                    <a class="page-link" onclick="Success(@i)">@i</a>
                </li>
            }



            @*<li class="page-item">
