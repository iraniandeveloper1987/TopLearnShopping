@using TopLearn.Core.Convertors
@model Tuple<List<TopLearn.DAL.Entities.Comment.CourseComment>, int>
    
@{
    Layout = null;
}


@foreach (var item in Model.Item1)
{
    <!-- row -->
    <div class="comment-row">
        <img src="/images/Users/UserAvatar/@item.User.UserAvatar">
        <div class="left-col">
            <h3>@item.User.FullName </h3>
            <span>@item.RegisterDate.MiladiToShamsi()</span>
            <p>
                @item.Comment
            </p>
        </div>
    </div>
    <!-- /row -->
}



@if (Model.Item2 > 0)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
