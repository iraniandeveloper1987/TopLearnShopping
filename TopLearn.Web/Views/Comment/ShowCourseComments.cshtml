@using TopLearn.Core.Convertors
@model List<TopLearn.DAL.Entities.Comment.CourseComment>

@{
    Layout = null;
}


@foreach (var item in Model)
{
    <!-- row -->
    <div class="comment-row">
        <img src="/images/Users/UserAvatar/@item.User.UserAvatar">
        <div class="left-col">
            <h3>@item.User.FullName </h3>
            <span>@item.RegisterDate.MiladiToShamsi()</span>
            <p>
                @item.Comment
            </p>
        </div>
    </div>
    <!-- /row -->
}



<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true"><i class="zmdi zmdi-chevron-right"></i></span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true"><i class="zmdi zmdi-chevron-left"></i></span>
            </a>
        </li>
    </ul>
</nav>
