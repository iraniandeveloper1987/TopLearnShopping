
@{
    ViewData["Title"] = "ورود به سایت";
}

@using TopLearn.Core.DTOs.AccountViewModels

@model LoginMobileViewModel


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
        </ul>
    </nav>
</div>


<main class="client-page">
    <div class="container-content">

        <header><h2> ورود به سایت </h2></header>
        
        
        @if((bool)ViewData["EditProfile"]){
        
            <div class="alert alert-warning">
                <p class="help-block">
                  به دلیل ویرایش پروفایل خود جهت بارگزاری مجدد اطلاعات مجددا لاگین کنید
                </p>
            </div>
        }


        @if (ViewData["IsSuccsessMessqage"] != null)
        {
            <div class="alert alert-success">
                <p class="help-block">
                    @ViewData["IsSuccsessMessqage"]
                </p>
            </div>

            <script>
                // Your delay in milliseconds
               
                var delay = 3000;
                var functime = () => {
                    setTimeout(function () { window.location = "https://localhost:5001/UserPanel" }, delay);
                }

              
                functime();
               

            </script>

        }
        <div class="form-layer">

            <form asp-action="LogIn" asp-controller="Account" method="post" asp-route-ReturnUrl="@ViewData["ReturnUrl"]">

                <div class="input-group">
                    <span class="input-group-addon" id="Mobile"><i class="zmdi zmdi-smartphone"></i></span>
                    <input asp-for="Mobile" type="text" class="form-control" placeholder="موبایل" aria-describedby="tel">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="remember-me">
                    <label><input type="checkbox" asp-for="RememberMe">  مرا بخاطر بسپار </label>
                </div>

                <div class="link">
                    <a href="/ForgetPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href="/Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
