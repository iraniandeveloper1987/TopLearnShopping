
@{
    ViewData["Title"] = $"پنل کاربری {User.Claims.FirstOrDefault(c => c.Type == "FullName").Value}";
}


@model EditProfileViewModel

<div class="container">

    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">ویرایش پروفایل کاربری</li>
        </ul>
    </nav>
</div>


<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBarUserPanel" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> ویرایش حساب کاربری </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="EditProfileUser" asp-controller="Home" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="fullname"><i class="zmdi zmdi-account"></i></span>
                                            <input asp-for="FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی" aria-describedby="fullname">
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                                            <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" aria-describedby="username">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                            <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="mobile"><i class="zmdi zmdi-smartphone"></i></span>
                                            <input asp-for="Mobile" type="text" class="form-control" placeholder="موبایل" aria-describedby="mobile">
                                            <span asp-validation-for="Mobile" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="avatar"><i class="zmdi zmdi-upload"></i></span>
                                            <input asp-for="Avatar" type="file" class="form-control"  aria-describedby="avatar">
                                            <p class="text text-danger">لطفا فقط تصویر با فرمت jpg انتخاب کنید</p>
                                        </div>
                                      
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <img class="thumbnail" src="/images/Users/UserAvatar/@Model.UserAvatar" style="max-width: 150px">

                                        <input type="hidden" asp-for="UserAvatar" />
                                    </div>




                                    @*<div class="col-md-7 col-sm-8 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                                <input asp-for=""  type="text" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                                            </div>
                                        </div>*@

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        @*<button class="btn btn-success"> ویرایش اطلاعات </button>*@
                                        <input type="submit" class="btn btn-success" value="ویرایش اطلاعات" />
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>



